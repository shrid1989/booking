{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitReturns": true,
    "noImplicitThis": false, // changed to false because of conflict with React.hooks usage
    "noImplicitAny": false, //changed to false because of conflict with ts-loader for remove properties
    "strictNullChecks": true,
    "esModuleInterop": true,
  },
  "include": [
    "./src",
  "__tests__/setupTests.ts", "interfaces"  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}